%html
  %head
    %title FisioApp
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
%body
  #wrapper_all
    #wrapper_head
      - if user_signed_in?
        #profile-menu
          = render 'layouts/profile_menu'
      #logo
      #title
        %h1
          %span.fisio FISIO
          %span.app APP
          %span.descripcion Gesti√≥n integral de pacientes
    #wrapper_content
      -if notice
        %div.flash.notice= notice
      -if alert
        %div.flash.alert= alert
      -if !:title.blank?
        %h2= yield :title
      = yield
    #wrapper_footer
