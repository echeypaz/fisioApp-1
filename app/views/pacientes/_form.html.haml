      = show_for resource do |item|
        = item.association :clinicalhistories, :collection_tag => :ul do |c|
          %li= link_to t(c.assessmentdate), :controller => "pacientes", :action => "edit", :clinicalhistory => c
  %fieldset.clinicalhistories_data
    %legend=t(:clinicalhistories_data)
