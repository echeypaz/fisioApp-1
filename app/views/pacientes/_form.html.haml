= simple_form_for resource , :html => { :multipart => true } do |f|
  %div.errors
    = f.error_notification
  %fieldset.fieldset1 
    %legend=t(:paciente)
    %a.show_hide{:href=>"#"}= t(:show)
    .slidingDiv
      .nested-fields
        = f.input :name
        = f.input :firstsurname
        = f.input :secondsurname
        .clear
        = f.input :profession
        = f.input :photo
        .clear
        = f.input :idcode
        = f.association :idtype , :label =>false , :include_blank => false
        = f.input :birthdate, :as=>:string, :label => "F.Nac" 
        .input 
          #{@edad} aÃ±os
        .clear
        #paciente_addres= f.input :addres
        #paciente_zip= f.input :zip
        .clear
        = f.input :mobilephone
        = f.input :familyphone
        = f.input :homephone
        .clear
        #paciente_email= f.input :email
  - if !@clinicalhistory.blank?
    %fieldset.clinicalhistories_list
      %legend=t(:clinicalhistories_list)
      = show_for resource do |item|
        = item.association :clinicalhistories, :collection_tag => :ul do |c|
          %li
            = link_to t(c.assessmentdate), :controller => "pacientes", :action => "edit", :clinicalhistory => c
            = c.reasonconsultation
            = c.specialist
    %fieldset.clinicalhistories_data
      %legend=t(:clinicalhistories_data)
      = simple_fields_for @clinicalhistory do |i|
        = render 'clinicalhistory_fields', :f => i
    = f.button :submit
