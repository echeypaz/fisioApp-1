= simple_form_for resource , :html => { :multipart => true } do |f|
  %div.errors
    = f.error_notification
  %fieldset.personal_data       
    %legend= t(:personal_data)
    = f.input :name
    = f.input :firstsurname
    = f.input :secondsurname
    <!-- = link_to (:photo), resource.photo.url--!>
    = f.input :photo
    = f.input :profession
    = f.association :idtype , :label =>false , :include_blank => false
    = f.input :idcode
    = f.input :birthdate, :as=>:string, :label => "F.Nac" 
    #{@edad} a√±os
    = f.input :addres
    = f.input :zip
    = f.input :mobilephone
    = f.input :familyphone
    = f.input :homephone
    = f.input :email
  %fieldset.clinicalhistories_list
